<Window x:Class="Nfh.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nfh.Editor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        x:Name="mainWindow"
        DataContext="{Binding TextViewModel, ElementName=mainWindow}">
    <Window.InputBindings>
        <KeyBinding Command="{Binding Undo}" Gesture="CTRL+Z"/>
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
        </Menu>

        <Grid>
            <Button x:Name="btnUndo" Content="&lt;-" HorizontalAlignment="Left" Margin="44,10,0,0" VerticalAlignment="Top" Command="{Binding Undo}" />
            <Button x:Name="btnRedo" Content="-&gt;" HorizontalAlignment="Left" Margin="66,10,0,0" VerticalAlignment="Top" Command="{Binding Redo}"/>
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Command="{Binding Save}"/>
            <Label x:Name="lblSaveState" Content="{Binding SaveStatus}" HorizontalAlignment="Left" Margin="88,7,0,0" VerticalAlignment="Top"/>
            <Label x:Name="lblTextContent" Content="{Binding Text}" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
            <Button x:Name="btnAppendChar" Content="Append" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Command="{Binding AppendChar}"/>
        </Grid>

    </DockPanel>
</Window>
