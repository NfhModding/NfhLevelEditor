<Window x:Class="Nfh.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nfh.Editor" 
        xmlns:thumbs="clr-namespace:Nfh.Editor.Thumbs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        x:Name="mainWindow"
        DataContext="{Binding TextViewModel, ElementName=mainWindow}">
    <Window.Resources>
        <Style TargetType="{x:Type ContentControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContentControl}">
                        <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                            <ContentPresenter Content="{TemplateBinding Content}"/>
                            <thumbs:MoveThumb Cursor="SizeAll">
                                <thumbs:MoveThumb.Style>
                                    <Style TargetType="{x:Type thumbs:MoveThumb}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type thumbs:MoveThumb}">
                                                    <Rectangle Fill="Transparent" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </thumbs:MoveThumb.Style>
                            </thumbs:MoveThumb>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <Canvas>
            <ContentControl Width="100" Height="100">
                <Ellipse Width="100" Height="100" Fill="Black"/>
            </ContentControl>
        </Canvas>

    </DockPanel>
</Window>
